<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Education - Teachers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>

<%- include('partials/header') %>
<%- include('partials/sidebar') %>

<section class="teachers">
    <h1 class="heading">expert tutors</h1>

    <form action="/teachers" method="post" class="search-tutor" style="max-width:400px; margin:2rem auto; display:flex; align-items:center; background:#fff; border-radius:30px; box-shadow:0 2px 8px rgba(0,0,0,0.06); padding:0.5rem 1rem;">
        <i class="fas fa-search" style="color:#aaa; font-size:1.1rem; margin-right:0.5rem;"></i>
        <input type="text" name="search_box" maxlength="100" placeholder="Search tutor..." required style="border:none; outline:none; flex:1; font-size:1rem; background:transparent; padding:0.5rem 0;">
        <button type="submit" name="search_tutor" class="btn btn-primary" style="border-radius:20px; margin-left:0.5rem; padding:0.5rem 1.2rem; font-size:1rem;">Search</button>
    </form>
    
    <div class="box-container">
        <div class="box offer">
            <h3>become a tutor</h3>
            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit Laborum, magnam!</p>
            <a href="/register" class="inline-btn">get started</a>
        </div>
        
        <% teachers.forEach(function(teacher) { %>
        <div class="box">
            <div class="tutor">
                <img src="<%= teacher.profilePicture || '/images/default-avatar.png' %>" alt="tutor">
                <div>
                    <h3><%= teacher.name || (teacher.firstName + ' ' + teacher.lastName) %></h3>
                    <span><%= teacher.role || 'Teacher' %></span>
                </div>
            </div>
            <p>playlists: <span><%= teacher.playlistsCount || 0 %></span></p>
            <p>total videos: <span><%= teacher.videosCount || 0 %></span></p>
            <p>total likes: <span><%= teacher.likesCount || 0 %></span></p>
            <a href="/teacher/<%= teacher._id %>" class="inline-btn">view profile</a>
        </div>
        <% }); %>
    </div>
</section>

<%- include('partials/footer') %>
<script src="/script.js"></script>
</body>
</html>